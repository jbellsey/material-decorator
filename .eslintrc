{
    "parser": "babel-eslint",

    "rules":  {
        "constructor-super":    2,
        "no-caller":            2,
        "no-const-assign":      2,
        "no-delete-var":        2,
        "no-eval":              2,
        "no-extend-native":     2,
        "no-param-reassign":    2,
        "no-redeclare":         2,
        "no-undef":             2,
        "operator-assignment":  [2, "always"],
        "quote-props":          [2, "as-needed", {"keywords": true}],
        "semi":                 [2, "always"],
        "semi-spacing":         [2, {"before": false, "after": true}],
        "strict":               2,
        "wrap-iife":            2,

        "comma-style":          [1, "last"],
        "dot-notation":         1,
        "eqeqeq":               1,
        "new-parens":           1,
        "no-extra-parens":      1,
        "no-extra-semi":        1,
        "no-lonely-if":         1,
        "no-shadow":            1,
        "no-use-before-define": 1,
        "no-unneeded-ternary":  1,
        "no-unused-vars":       1,
        "object-shorthand":     [1, "always"],
        "valid-typeof":         1,
        "vars-on-top":          1
    },
    "env":    {
        "browser": true,
        "node":    true
    }
}